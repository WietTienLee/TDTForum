<!DOCTYPE html>
<html lang="en">

<head>
    <title>Notification</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
        integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js"
        integrity="sha512-q/dWJ3kcmjBLU4Qc47E4A9kTB4m3wuTY7vkFJDTZKjTs8jhyGQnaUrxa0Ytd0ssMZhbNua9hE+E7Qv1j+DyZwA=="
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
</head>

<body>

    <div class="row">
        <div class="box-header">
            <div class="dropdown text-right py-2">
                <span>Xin chào</span><a class="dropdown-toggle text-primary" data-toggle="dropdown"
                    id="name-login"><span></i>&nbsp;&nbsp;<%=name%></span></a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/logout" onclick="signOut();">
                        <i class="fas fa-sign-out-alt"></i>;&nbsp;&nbsp Đăng xuất</a>
                </div>
            </div>
        </div>
        <input type="checkbox" id="check">
        <label for="check" class="btn_nav">
            <i class="fa fa-bars" id="btn_open"></i>
            <i class="fa fa-bars" id="btn_close"></i>
        </label>
        <div class="col-lg-2 sidebarright">
            <div class="sidebar">
                <ul>
                    <li><a href=""><i class="fas fa-home"></i>&nbsp;&nbsp; Trang chủ</a></li>
                    <li id="canhan" data-name="<%=name%>" role="button"><a><i class="far fa-id-card"></i>&nbsp;&nbsp; Về
                            trang cá nhân</a></li>
                </ul>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="col-md-7 offset-md-3">
                <div class="box">
                    <div class="postNew col-md-12">
                        <%for(var i=data.length-1;i>-1;i--){%>
                            <div class="contentBox">
                                <div class="userInfor">
                                    <div class="infor">
                                        <div class="userName">
                                            <h4> <a href="/student/<%=data[i].email%>">
                                                    <%=data[i].name%>
                                                </a> </h4>
                                        </div></a>
                                        <div class="titlePost"><a href="/posts/<%=(data[i]._id).toString()%>"><i>
                                                    <%=data[i].datePost%>
                                                </i></a></div></a>
                                    </div>
                                </div>
                                <div class="context">
                                    <div class="contextPost">
                                        <%=data[i].contextPost%>
                                    </div>
                                    <%if(data[i].image){%>
                                        <img class="img-fluid rounded" src="<%=data[i].image%>" alt="">
                                        <%}else{%>
                                            <img src="" class="img-fluid rounded" alt="">
                                            <%}%>
                                </div>
                            </div>
                            <a href="/posts/<%=data[i]._id.toString()%>" class="comment">
                                <input class="form-control cmt-val" type="text" placeholder="Nhập comment">
                                <button type="submit" class="btn btn-comment btn-primary">Gửi</button>
                            </a>
                            <%}%>
                    </div>
                </div>
            </div>
        </div>
        <div class=" col-lg-2 notification">
            <h3>Thông báo mới</h3>
            <a href="/allthongbao/1">Xem tất cả</a>
            <ul class="list-group">
                <li class="list-group-item list-group-item-success">
                    <%if(notifications.length>6){%>
                        <%for(var i=notifications.length-1;i>notifications.length-6;i--){%>
                            <div class="item">
                                <div class="khoa">
                                    <%=notifications[i].permission%>
                                </div>
                                <div class="title"><b>THÔNG BÁO: <%=notifications[i].title%></b></div>
                                <a href="/thongbao/<%=notifications[i]._id.toString()%>">Xem chi tiết nội dung</a>
                            </div>
                            <%}%>
                                <%}else{%>
                                    <%for(var i=0;i<notifications.length;i++){%>
                                        <div class="item">
                                            <div class="khoa">
                                                <%=notifications[i].permission%>
                                            </div>
                                            <div class="title"><b>THÔNG BÁO: <%=notifications[i].title%></b></div>
                                            <a href="/thongbao/<%=notifications[i]._id.toString()%>">Xem chi tiết nội
                                                dung</a>
                                        </div>
                                        <%}%>
                                            <%}%>
                </li>
            </ul>
        </div>


    </div>
    <div id="online-notification" class="alert alert-success d-inline position-fixed small"
        style="bottom: 20px; left: 20px">
        <strong>Trần Quang Trí</strong>
    </div>
    <script src="./main.js"></script>
</body>

</html>